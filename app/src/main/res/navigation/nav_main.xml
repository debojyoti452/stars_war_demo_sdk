<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.mvvm_app.features.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_planetFragment"
            app:destination="@id/planetFragment" />
        <action
            android:id="@+id/action_mainFragment_to_peopleFragment"
            app:destination="@id/peopleFragment" />
        <action
            android:id="@+id/action_mainFragment_to_filmFragment"
            app:destination="@id/filmFragment" />
    </fragment>
    <fragment
        android:id="@+id/filmFragment"
        android:name="com.example.mvvm_app.features.film.FilmFragment"
        android:label="FilmFragment" />
    <fragment
        android:id="@+id/peopleFragment"
        android:name="com.example.mvvm_app.features.people.PeopleFragment"
        android:label="PeopleFragment" />
    <fragment
        android:id="@+id/planetFragment"
        android:name="com.example.mvvm_app.features.planet.PlanetFragment"
        android:label="PlanetFragment" />
</navigation>
